# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /                           controllers.Application.login()
GET     /                           controllers.Application.staffMenu()
GET     /                           controllers.Application.adminMenu()
GET     /                           controllers.Application.thanksEntry()
GET     /                           controllers.Application.boardList()
GET     /                           controllers.Application.board()
GET     /                           controllers.Application.send()
GET     /                           controllers.Application.receive()
GET     /                           controllers.Application.userManage()
GET     /                           controllers.Application.postManage()
POST     /                           controllers.Application.addUser()
POST     /                           controllers.Application.addPost()
POST     /                           controllers.Application.addClass()
POST     /                           controllers.Application.addcheck()
GET     /                           controllers.Application.deleteUser()
GET     /                           controllers.Application.deletePost()
GET     /                           controllers.Application.deleteClass()
GET     /                           controllers.Application.vote()
GET     /                           controllers.Application.search()
GET     /                           controllers.Application.count()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
